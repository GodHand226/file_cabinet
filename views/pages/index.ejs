<!DOCTYPE html>
<html>
  <head>
    <link
      rel="stylesheet"
      href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
    />
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <title>EncryptBin</title>
  </head>
  <body>
    <main>
      <div class="py-20 h-screen bg-gray-800 px-2">
        <div
          class="max-w-md mx-auto bg-gray-300 rounded-lg overflow-hidden md:max-w-lg"
        >
          <div class="md:flex">
            <div class="w-full">
              <div class="p-4 border-b-2">
                <span class="text-lg font-bold text-gray-600"
                  >Encrypt File Cabinet</span
                >
              </div>

              <div class="p-3">
                <form
                  method="post"
                  enctype="multipart/form-data"
                  action="upload"
                >
                  <div class="mb-2">
                    <span>Password:</span>
                    <input
                      type="password"
                      class="h-12 px-3 w-full border-gray-200 border rounded focus:outline-none focus:border-gray-300 bg-gray-300"
                      name="password"
                    />
                  </div>

                  <div class="mb-2">
                    <span>Attachments:</span>
                    <div
                      class="relative h-40 rounded-lg border-dashed border-2 border-gray-200 bg-gray-300 flex justify-center items-center hover:cursor-pointer"
                    >
                      <div class="absolute">
                        <div class="flex flex-col items-center">
                          <i class="fa fa-cloud-upload fa-3x text-gray-200"></i>
                          <span class="block text-gray-400 font-normal"
                            >Attach you files here</span
                          >
                          <span class="block text-gray-400 font-normal"
                            >or</span
                          >

                          <span class="block text-blue-400 font-normal"
                            >Browse files</span
                          >
                        </div>
                      </div>
                      <input
                        type="file"
                        class="h-full w-full opacity-0"
                        name="upload_file"
                        id="upload_file"
                      />
                    </div>
                    <span>Message:</span>
                    <div>
                      <input
                        type="text"
                        class="h-12 px-3 w-full border-gray-200 border rounded focus:outline-none focus:border-gray-300 bg-gray-300"
                        name="title"
                      />
                    </div>
                    <div class="flex justify-between items-center text-black">
                      <span>Expires:</span>
                      <span>
                        <select
                          name="expire"
                          class="h-8 px-3 w-full border-gray-200 border rounded focus:outline-none focus:border-gray-300 bg-gray-300"
                        >
                          <option>5 minutes</option>
                          <option>10 minutes</option>
                          <option>1 hour</option>
                          <option>1 day</option>
                          <option>1 week</option>
                          <option>1 month</option>
                          <option>1 year</option>
                          <option>Never</option>
                        </select>
                      </span>
                      <span>
                        <input
                          type="hidden"
                          name="burnflag"
                          value="false"
                          id="burnflag_hidden"
                        />
                        <input
                          type="checkbox"
                          name="burnflag"
                          value="true"
                          id="burnflag_check"
                        />
                        Burn After Reading
                      </span>
                      <span class="flex items-center"
                        ><i class="fa fa-lock mr-1"></i> secure</span
                      >
                    </div>
                  </div>

                  <div class="mt-3 text-center pb-3">
                    <input
                      type="submit"
                      value="Submit"
                      class="w-full h-12 text-lg w-32 bg-blue-600 rounded text-white hover:bg-blue-700"
                    />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
  <script>
    $("#burnflag_check").click(() => {
      if ($("#burnflag_check").prop("checked"))
        $("#burnflag_hidden").attr("disabled", true);
      else $("#burnflag_hidden").attr("disabled", false);
    });
  </script>
</html>
